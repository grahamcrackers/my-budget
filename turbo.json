{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "pipeline": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"    
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "storybook-static/**"
            ]
        },
        "lint": {
            "outputs": []
        },
        "test": {},
        "test:watch": {
            "cache": false
        }
    }
}
